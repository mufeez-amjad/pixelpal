{
	"name": "pixelpal",
	"version": "0.1.0",
	"private": true,
	"main": "build/main.js",
	"homepage": "./",
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build && tsc -p ./electron",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "eslint src/**/*.js src/**/*.jsx",
		"electron:serve": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
		"electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/main.js",
		"electron:start": "wait-on tcp:3000 && electron .",
		"migrate:make": "knex migrate:make",
		"prepare": "cd .. && husky install",
		"release": "electron-builder"
	},
	"build": {
		"extends": null,
		"appId": "null.pizza.pixelpal",
		"files": [
			"assets/*",
			"build/**/*",
			"migrations/*",
			"node_modules/**/*",
			"package.json",
			"migrations/*"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"eslintConfig": {
		"extends": [
			"react-app"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"@azure/identity": "^2.0.4",
		"@blueprintjs/core": "^4.0.0",
		"@electron/remote": "^2.0.8",
		"@microsoft/microsoft-graph-client": "^3.0.2",
		"@reduxjs/toolkit": "^1.8.0",
		"@types/node": "^17.0.23",
		"axios": "^0.26.1",
		"date-fns": "^2.28.0",
		"electron-store": "^8.0.1",
		"googleapis": "^98.0.0",
		"isomorphic-fetch": "^3.0.0",
		"keytar": "^7.9.0",
		"mixpanel": "^0.14.0",
		"moment": "^2.29.1",
		"qs": "^6.10.3",
		"react": "^17.0.2",
		"react-big-calendar": "^0.40.0",
		"react-circular-progressbar": "^2.0.4",
		"react-dom": "^17.0.2",
		"react-icons": "^4.3.1",
		"react-redux": "^7.2.6",
		"react-router": "^6.2.2",
		"react-router-dom": "^6.2.2",
		"react-scripts": "5.0.0",
		"redux": "^4.1.2",
		"reflect-metadata": "^0.1.13",
		"sqlite3": "^5.0.2",
		"styled-components": "^5.3.5",
		"typeorm": "^0.2.45",
		"typescript": "^4.6.3",
		"web-vitals": "^2.1.4"
	},
	"devDependencies": {
		"@microsoft/microsoft-graph-types": "^2.16.0",
		"@types/node": "^16.11.19",
		"@types/qs": "^6.9.7",
		"@types/react": "^17.0.43",
		"@types/react-big-calendar": "^0.36.4",
		"@types/react-dom": "^17.0.14",
		"@types/react-router-dom": "^5.3.3",
		"@types/sqlite3": "^3.1.8",
		"@types/styled-components": "^5.1.24",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"electron": "^17.2.0",
		"electron-builder": "^22.14.13",
		"electron-packager": "^15.4.0",
		"eslint": "^8.11.0",
		"eslint-plugin-react": "^7.29.4",
		"husky": ">=7",
		"lint-staged": ">=12",
		"prettier": "^2.6.0",
		"wait-on": "^6.0.1"
	},
	"lint-staged": {
		"*.{js,ts,jsx}": "eslint --cache --fix",
		"*.{js,ts,jsx,css,md}": "prettier --write"
	}
}
